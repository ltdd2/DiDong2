<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/btnHien"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="Hiện" />

            <Button
                android:id="@+id/btnAn"
                android:layout_width="106dp"
                android:layout_height="44dp"
                android:text="Ẩn" />

            <Button
                android:id="@+id/btnRepl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lặp lại" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/btnZInt"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="Zoomint" />

            <Button
                android:id="@+id/btnZOut"
                android:layout_width="106dp"
                android:layout_height="44dp"
                android:text="Zoomout" />
            <Button
                android:id="@+id/btnXoay"
                android:layout_width="106dp"
                android:layout_height="44dp"
                android:text="Xoay" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnLen"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:text="Lên" />

            <Button
                android:id="@+id/btnXuong"
                android:layout_width="106dp"
                android:layout_height="44dp"
                android:text="Xuống" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="4">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/cuncon" />
    </LinearLayout>
</LinearLayout>